# BahnVision Configuration
# Copy this to .env and customize as needed. Most defaults work for local dev.

# =============================================================================
# Docker Build (enables BuildKit layer caching for faster rebuilds)
# =============================================================================
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# Infrastructure (uncomment to override defaults)
# =============================================================================
# VALKEY_URL=valkey://localhost:6379/0
# DATABASE_URL=postgresql+asyncpg://bahnvision:bahnvision@localhost:5432/bahnvision

# Optional: if using the bundled Postgres from docker-compose.yml
# POSTGRES_USER=bahnvision
# POSTGRES_PASSWORD=bahnvision
# POSTGRES_DB=bahnvision

# =============================================================================
# Frontend build args (used by docker compose build)
# =============================================================================
# VITE_API_BASE_URL=http://localhost:8000
# VITE_ENABLE_DEBUG_LOGS=false

# =============================================================================
# CORS (comma-separated or JSON array)
# =============================================================================
CORS_ALLOW_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# Cache TTLs (seconds) - defaults are optimized for typical usage
# =============================================================================
# Departures: short TTL for real-time data
# TRANSIT_DEPARTURES_CACHE_TTL_SECONDS=30
# TRANSIT_DEPARTURES_CACHE_STALE_TTL_SECONDS=300

# Station list: long TTL (changes rarely)
# TRANSIT_STATION_LIST_CACHE_TTL_SECONDS=86400
# TRANSIT_STATION_LIST_CACHE_STALE_TTL_SECONDS=172800

# =============================================================================
# Cache Warmup (optional)
# =============================================================================
# CACHE_WARMUP_DEPARTURE_STATIONS=marienplatz,hauptbahnhof
# CACHE_WARMUP_DEPARTURE_LIMIT=10

# =============================================================================
# OpenTelemetry (optional, disabled by default)
# =============================================================================
# OTEL_ENABLED=false
# OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:4317
